# templates/webapp.conf.j2
# This configuration will be placed in /etc/nginx/conf.d/

server {
    listen 80;
    listen [::]:80;

    # Using a variable for the server name
    server_name {{ server_hostname }};

    # The default_server flag makes this the default site for port 80,
    # effectively overriding the default NGINX welcome page.
    # This is a cleaner way than deleting a default config file.
    listen 80 default_server;
    listen [::]:80 default_server;

    location / {
        proxy_pass http://127.0.0.1:{{ app_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}